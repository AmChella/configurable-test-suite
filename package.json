{
  "name": "configurable-test-suite",
  "version": "1.0.0",
  "description": "Custom Test Suite",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npx playwright test",
    "serve": "ts-node server.ts",
    "serve:build": "node dist/server.js",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report || true",
    "allure:open": "allure open ./allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/AmChella/configurable-test-suite.git"
  },
  "keywords": [
    "custom-test-suite",
    "playwright"
  ],
  "author": "Chella S",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AmChella/configurable-test-suite/issues"
  },
  "homepage": "https://github.com/AmChella/configurable-test-suite#readme",
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "allure-playwright": "^3.0.0",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/cors": "^2.8.17",
    "@types/yamljs": "^0.2.34",
    "allure-commandline": "^2.29.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
